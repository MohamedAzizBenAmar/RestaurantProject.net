@model IEnumerable<Category>

@if (Model == null || !Model.Any())
{
        <div class="alert alert-info rounded-lg text-center mb-4" role="alert">
            <p class="mb-0">No categories found.</p>
        </div>
}
else
{
        <div class="row g-4">
        @foreach (var category in Model)
        {
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 shadow-sm rounded-lg">
                            <div class="card-body p-4 d-flex flex-column">
                                <h6 class="card-title fw-bold mb-4">@category.Name</h6>
                                <div class="mt-auto">
                                    <div class="d-flex gap-2 flex-wrap">
                                        <button type="button" class="btn btn-light btn-sm edit-btn" data-id="@category.CategoryId">
                                            <i class="bi bi-pencil-fill"></i> Edit
                                        </button>
                                        <button type="button" class="btn btn-secondary btn-sm delete-btn" data-id="@category.CategoryId">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
        }
        </div>
}