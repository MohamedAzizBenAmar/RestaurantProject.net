@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container pt-6 pb-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm rounded-lg p-4 bg-white">
                <div class="text-center mb-4">
                    <h2 class="fw-bold">Create a new account</h2>
                    <p class="text-muted small">Join us! Please enter your details</p>
                </div>
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-lg mb-3" role="alert"></div>
                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label fw-bold"></label>
                        <div class="input-group">
                            <span class="input-group-text bg-white"><i class="bi bi-envelope"></i></span>
                            <input asp-for="Input.Email" class="form-control form-control-sm rounded-lg" 
                                   autocomplete="username" aria-required="true" placeholder="Enter your email" />
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label fw-bold"></label>
                        <div class="input-group">
                            <span class="input-group-text bg-white"><i class="bi bi-lock"></i></span>
                            <input asp-for="Input.Password" class="form-control form-control-sm rounded-lg" 
                                   autocomplete="new-password" aria-required="true" placeholder="Enter your password" />
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Input.ConfirmPassword" class="form-label fw-bold"></label>
                        <div class="input-group">
                            <span class="input-group-text bg-white"><i class="bi bi-lock"></i></span>
                            <input asp-for="Input.ConfirmPassword" class="form-control form-control-sm rounded-lg" 
                                   autocomplete="new-password" aria-required="true" placeholder="Confirm your password" />
                        </div>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                    </div>
                    <div class="d-grid mb-3">
                        <button id="registerSubmit" type="submit" class="btn btn-primary btn-sm" 
                                style="background-color: var(--primary-color); border-color: var(--primary-color);">
                            <i class="bi bi-person-plus me-2"></i>Register
                        </button>
                    </div>
                    <div class="text-center">
                        <p class="text-muted small">
                            Already have an account? 
                            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" style="color: var(--primary-color);">Log in</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
    }
</style>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}