@page
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="container pt-6 pb-4">
    <div class="row g-4">

        <div class="col-md-9">
            <div class="content-container shadow-sm rounded-lg p-4 bg-white">
                <h2 class="fw-bold mb-4">Profile</h2>
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-lg mb-3" role="alert"></div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Username</label>
                        <input class="form-control form-control-sm rounded-lg" placeholder="Enter your username" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Phone Number</label>
                        <input class="form-control form-control-sm rounded-lg" placeholder="Enter your phone number" />
                    </div>
                    <button type="submit" class="btn btn-primary btn-sm" 
                            style="background-color: var(--primary-color); border-color: var(--primary-color);">
                        <i class="bi bi-save me-2"></i>Save Changes
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}