@page
@model EmailModel
@{
    ViewData["Title"] = "Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<div class="container pt-6 pb-4">
    <div class="row g-4">

        <div class="col-md-9">
            <div class="content-container shadow-sm rounded-lg p-4 bg-white">
                <h2 class="fw-bold mb-4">Email</h2>
                <!-- Placeholder for email content -->
                <form method="post">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Current Email</label>
                        <input class="form-control form-control-sm rounded-lg" disabled />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">New Email</label>
                        <input class="form-control form-control-sm rounded-lg" placeholder="Enter new email" />
                    </div>
                    <button type="submit" class="btn btn-primary btn-sm" 
                            style="background-color: var(--primary-color); border-color: var(--primary-color);">
                        Change Email
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>